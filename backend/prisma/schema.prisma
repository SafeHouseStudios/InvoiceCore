// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. SYSTEM & CONFIGURATION
// --------------------------------------

model SystemSetting {
  key         String  @id @db.VarChar(50) // e.g., "COMPANY_PROFILE", "SMTP_CONFIG"
  value       String? @db.Text            // Simple value store
  json_value  Json?                       // Flexible config store (Logos, Signatures)
  is_locked   Boolean @default(false)     // Prevent accidental deletion of core settings
}

model User {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  password_hash      String
  role               String   @default("ADMIN")
  
// Security Features
  two_factor_secret  String?
  two_factor_enabled Boolean  @default(false)
  backup_codes       Json?
  reset_token        String?   @unique
  reset_token_expiry DateTime?
  notifications      Notification[]
  activities         ActivityLog[]

  created_at         DateTime @default(now())

  
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
  
  action      String   // e.g., "LOGIN", "CREATE_INVOICE"
  description String   // e.g., "User logged in", "Created Invoice #INV-001"
  entity_type String?  // Optional: "INVOICE", "CLIENT", "SETTINGS"
  entity_id   String?  // Optional: ID of the affected item
  ip_address  String?
  
  created_at  DateTime @default(now())

  @@map("ActivityLog")
}

model Notification {
  id          Int      @id @default(autoincrement())
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
  
  title       String
  message     String?  @db.Text
  type        String   @default("INFO") // INFO, SUCCESS, WARNING, ERROR
  is_read     Boolean  @default(false)
  link        String?  // Optional: URL to redirect (e.g. /invoices/5)
  
  created_at  DateTime @default(now())

  @@map("Notification")
}

// --------------------------------------
// 2. CORE CRM & BANKING
// --------------------------------------

model Client {
  id              Int       @id @default(autoincrement())
  company_name    String
  contact_person  String?
  tax_id          String?
  cin             String?   // GSTIN or VAT ID
  
  // Location Logic for Tax
  state_code      Int?      // Crucial for IGST vs CGST/SGST logic
  country         String    @default("India")
  
  email           String?
  phone           String?
  addresses       Json?     // { billing: {...}, shipping: {...} }
  
  created_at      DateTime  @default(now())

  // Relations
  invoices        Invoice[]
  quotations      Quotation[]
}

model BankAccount {
  id                  Int      @id @default(autoincrement())
  label               String   // e.g. "Primary USD"
  currency            String   @default("USD")
  is_default          Boolean  @default(false)
  
  // Banking Details
  bank_name           String
  account_holder      String
  account_number      String
  routing_number      String?  // USA / International
  swift_code          String?  // SWIFT/BIC
  ifsc_code           String?  // India
  iban                String?  // Europe
  sort_code           String?  // UK
  branch_address      String?  @db.Text
  upi_id              String?  // India UPI
  
  created_at          DateTime @default(now())

  // Relations
  invoices            Invoice[]
  quotations          Quotation[]
}

// --------------------------------------
// 3. INVOICING & FINANCE
// --------------------------------------

model Invoice {
  id              Int      @id @default(autoincrement())
  invoice_number  String   @unique 
  
  // Foreign Keys
  client_id       Int
  client          Client   @relation(fields: [client_id], references: [id])
  
  bank_account_id Int?     
  bank_account    BankAccount? @relation(fields: [bank_account_id], references: [id])

  // Invoice Details
  status          String   @default("DRAFT") // DRAFT, SENT, PAID, OVERDUE
  issue_date      DateTime
  due_date        DateTime?
  currency        String   @default("INR")
  
  // JSON Data Blobs for Flexibility
  line_items      Json     // Array of items { desc, qty, rate, hsn }
  tax_summary     Json     // Snapshot of tax calculations
  
  // Financials
  subtotal        Decimal  @db.Decimal(15, 2)
  grand_total     Decimal  @db.Decimal(15, 2)
  
  // Features
  remarks         String?  @db.Text
  is_manual_entry Boolean  @default(false) // Allows backdating/custom numbers
  
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  
  @@map("Invoice")
}

model Quotation {
  id                Int      @id @default(autoincrement())
  quotation_number  String   @unique
  
  client_id         Int
  client            Client   @relation(fields: [client_id], references: [id])
  
  bank_account_id   Int?
  bank_account      BankAccount? @relation(fields: [bank_account_id], references: [id])
  
  issue_date        DateTime
  expiry_date       DateTime?
  status            String   @default("DRAFT")
  
  // Quote Specifics
  line_items        Json     
  services_offered  String?  @db.Text 
  contract_terms    String?  @db.Text 
  remarks           String?  @db.Text 
  
  subtotal          Decimal  @db.Decimal(15, 2)
  grand_total       Decimal  @db.Decimal(15, 2)
  currency          String   @default("INR")

  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@map("Quotation")
}

model Expense {
  id          Int      @id @default(autoincrement())
  category    String
  amount      Decimal  @db.Decimal(15, 2)
  date        DateTime
  description String?
  created_at  DateTime @default(now())

  @@map("Expense")
}

// --------------------------------------
// 4. UTILITIES & SEQUENCING
// --------------------------------------

// Handles auto-incrementing numbers like "INV/24-25/005"
model InvoiceSequence {
  id          Int    @id @default(autoincrement())
  fiscal_year String @unique 
  last_count  Int    @default(0)

  @@map("InvoiceSequence") 
}

model QuotationSequence {
  id          Int    @id @default(autoincrement())
  fiscal_year String @unique 
  last_count  Int    @default(0)

  @@map("QuotationSequence") 
}

// Lookup tables for Tax Logic
model State {
  code        Int     @id
  name        String
  country     String  @default("India")

  @@map("State")
}

model Country {
  iso_code    String  @id @db.VarChar(5)
  name        String  @db.VarChar(100)
  currency    String? @db.VarChar(50)
  phone_code  String? @db.VarChar(10)

  @@map("Country")
}